<?xml version="1.0" encoding="utf-8"?>
<LinearLayout   android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chuyển đổi năm dương lịch"
        android:gravity="center"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="145dp">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Năm dương lịch"
            android:gravity="center"/>

        <EditText
            android:id="@+id/editDuongLich"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/textView1" />

        <Button
            android:id="@+id/btnChuyenDoi"
            android:layout_width="287dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/editDuongLich"
            android:text="Chuyển đổi"
            android:onClick="Convert"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="95dp"
            android:layout_height="36dp"
            android:layout_below="@+id/btnChuyenDoi"
            android:text="Năm âm lịch"
            android:gravity="center"/>

        <TextView
            android:id="@+id/textResult"
            android:layout_width="286dp"
            android:layout_height="36dp"
            android:layout_below="@+id/btnChuyenDoi"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@id/textView2"
            android:text=""
            android:gravity="center"/>
    </RelativeLayout>

</LinearLayout>